<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nisa.myapplication.MainActivity">

    <com.q42.android.scrollingimageview.ScrollingImageView
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/scrolling_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        scrolling_image_view:speed="8dp"
        scrolling_image_view:src="@drawable/yol" />

    <ImageView
        android:id="@+id/imgfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        scrolling_image_view:srcCompat="@drawable/elephant_alone" />

    <ImageView
        android:id="@+id/imgFare"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        scrolling_image_view:srcCompat="@drawable/mice" />

</RelativeLayout>

